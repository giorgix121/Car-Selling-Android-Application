                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/power_door_locks_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/mp3_player_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:text="Mp3 Player"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/mp3_player_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/mp3_player_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/analog_display_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="13"
                    android:paddingLeft="15dp"
                    android:text="Analog Display"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/analog_display_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/analog_display_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/air_filtration_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="14"
                    android:paddingLeft="15dp"
                    android:text="Air Filtration"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/air_filtration_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/air_filtration_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/chrome_bodyside_insert_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:text="Chrome Bodyside"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/chrome_bodyside_insert_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/chrome_bodyside_insert_cross"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">





                <TextView
                    android:id="@+id/rear_spoiler_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="16"
                    android:paddingLeft="15dp"
                    android:text="Rear Spoiler"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/rear_spoiler_tick"
                    android:layout_width="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/rear_spoiler_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/bluetooth_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="17"
                    android:paddingLeft="15dp"
                    android:text="Bluetooth"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/bluetooth_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/bluetooth_cross"
                    android:layout_width="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/stereo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="18"
                    android:paddingLeft="15dp"
                    android:text="Stereo"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/stereo_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/stereo_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Gallery
                    android:id="@+id/gallery2"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short Description"
                    android:textAppearance="@android:color/black"
                    android:layout_centerHorizontal="true"
                    android:textSize="18dp"/>


            </RelativeLayout>





            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/short_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>







        </LinearLayout>

    </ScrollView>

</LinearLayout>