<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/car_image_view"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/model_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:paddingRight="40dp"
                    android:text="Lexus GX 460"
                    android:textColor="@android:color/black" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:id="@+id/phonebuttontv"
                    android:text="Call To Owner"/>


                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/phoneicon"
                    android:id="@+id/phonebutton"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"/>


                <Button
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="200dp"
                    android:id="@+id/mailbutton"
                    android:background="@drawable/mailiconseemore"
                    android:layout_marginRight="9dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mailtv"
                    android:text="Send Mail To Owner"
                    android:paddingLeft="250dp"/>

            </RelativeLayout>





            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="2000$"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/color_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:text="Color: Black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/mileage_tv"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage: 90.000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/engine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:text="Engine: 4.6"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/drivetrain_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="Drivetrain: AWD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Gallery
                    android:id="@+id/gallery"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/abs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="5"
                    android:paddingLeft="15dp"
                    android:text="Abs"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/abs_iv_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/abs_iv_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/aircon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="6"
                    android:paddingLeft="15dp"
                    android:text="Aircon"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/airocn_iv_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_marginRight="9dp"
                    android:layout_alignParentRight="true"
                    android:layout_row="6"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/aircon_iv_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_column="1"
                    android:layout_marginTop="8dp"
                    android:layout_row="6"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/fourxfour_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:text="4X4"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/fourxfour_iv_tick"
                    android:layout_width="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/fourxfour_iv_cross"
                    android:layout_width="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/power_windows_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="8"
                    android:paddingLeft="15dp"
                    android:text="Power Windows"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/power_windows_tick"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/power_windows_iv_cross"
                    android:layout_width="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/cruise_control_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="9"
                    android:paddingLeft="15dp"
                    android:text="Cruise Control"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/cruise_control_tick"
                    android:layout_width="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/cruise_control_iv_cross"
                    android:layout_width="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:layout_marginRight="18dp"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/system_monitor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="10"
                    android:paddingLeft="15dp"
                    android:text="System Monitor"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/system_monitor_tick"
                    android:layout_width="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/system_monitor_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/cross"
                    android:visibility="invisible" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/power_door_locks_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_row="11"
                    android:paddingLeft="15dp"
                    android:text="Power Door Locks"
                    android:textAppearance="?android:attr/textAppearanceLarge"
